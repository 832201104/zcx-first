.page {
  padding: 30rpx;
}
.flex-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.form-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 35rpx 25rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
  /* position: relative; */
  margin-top: 30rpx;
}
.form-card .form-item {
  overflow: auto;
  margin-bottom: 25rpx;
  font-size: 28rpx;
}
.form-card .form-item input {
  background: #f2f5f6;
  padding: 15rpx 20rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 10rpx;
}
.btn-submit {
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  background: -webkit-linear-gradient(#ff978d, #ffbb69);
  background: linear-gradient(#ff978d, #ffbb69);
}

